<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping package="com.meeks.domain">

	<class name="User" table="meeks_user" lazy="false">
		<id name="id">
			<generator class="native" />
		</id>
		<property name="loginName" />
		<property name="md5Password" />
		<property name="name" />
		<property name="phone" />
		<property name="position" />

	</class>

</hibernate-mapping>
